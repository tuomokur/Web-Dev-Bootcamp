<% include ./partials/header %>
<div class="ui main text container">
    <div class="ui huge header">RESTful Bl√∂g</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog.id %>"><%= blog.title%></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <% if(blog.body && blog.body.length > 0) { %>
                                <p><%- blog.body.substring(0, 70) %>...</p>
                            <% } %>
                        </div>
                        <div class="extra">
                             <a class="ui floated basic blue button " href="/blogs/<%= blog.id %>">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>


<% include ./partials/footer %>